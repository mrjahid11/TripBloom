{
  "name": "tripbloom",
  "version": "1.0.0",
  "description": "TripBloom - Where Every Journey Blossoms",
  "main": "backend/index.js",
  "scripts": {
    "client": "npm run dev --prefix frontend",
    "server": "nodemon backend/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install"
  },
  "keywords": [
    "tour",
    "travel",
    "booking",
    "MERN"
  ],
  "author": "TripBloom Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongodb": "^7.0.0",
    "mongoose": "^8.0.3"
  }
}
